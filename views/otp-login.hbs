<div class="account-login section">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 offset-lg-3 col-md-10 offset-md-1 col-12">

                <form class="card login-form" action="/otp" method="post"
                    enctype="application/x-www-form-urlencoded">
                    <div class="card-body">
                        <div class="title">
                            <h3>Login Now</h3>
                            {{#if message}}
                            <div class="alert alert-warning alert-dismissible">
                                <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                                <strong>{{message}}</strong>
                            </div>
                            {{/if}}
                        </div>



                        <div>
                            <div class="card py-5 px-3">
                                <input type="text" name="mobile" value="{{mobile}}" style="display:none">
                                <h5 class="m-0"><strong>Mobile phone verification</strong></h5><span
                                    class="mobile-text">Enter the code
                                    we just send on your mobile number <b class="text-success">+91{{mobile}}</b></span>
                                <div class="d-flex flex-row mt-5"><input name="otp1" id="1" type="text" onkeypress="moveToNext('1')"  class="form-control"
                                        autofocus=""><input type="text" id="2" class="form-control" name="otp2"><input type="text" id="3" name="otp3"
                                        class="form-control"><input type="text" id="4" class="form-control" name="otp4"></div>
                                <div class="text-center mt-5"><span class="d-block mobile-text">Don't receive the
                                        code?</span>
                                    <button type="submit" class="btn btn-primary" style="width: 15%;">Submit</button>
                                    <button type="submit"
                                        class=" btn btn-danger font-weight-bold text-Light cursor">Resend</button>
                                </div>
                            </div>
                        </div>



                        <p class="outer-link">Don't have an account? <a href="/register">Register here </a>
                        </p>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script>

    function moveToNext(input){
        document.getElementById(input).focus();
    }
</script>