    function displayconfirm(proId) {
        
        $.ajax({
            method: 'get',
            url: '/add-to-cart/' + proId,
            success: (response) => {
                if (response.status) {
                    alert('cart added')
                    let count = $('#cart-count').html()
                    count = parseInt(count) + 1

                    $("#cart-count").html(count)
                }
            }


        })

    }
</script>