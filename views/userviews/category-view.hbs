<script>

  function displayconfirm1(proId) {

    $.ajax({
      url: '/add-to-cart/' + proId,
      method: 'get',
      success: (response) => {
        if (response.status) {
          let count = $('#cartCountId').html()
          count = parseInt(count) + 1
          $("#cart-count").html(count)
        }
      }


    })

  }
</script>