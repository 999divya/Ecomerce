    $(document).ready(function () {
        $('#example').DataTable({
        });
    });
</script>

<script>
    function catofferStatus(status, catofferId) {
        $.ajax({
            url: '/admin/change-catoffer-status',
            type: 'post',
            data: {
                status: status,
               catofferId: catofferId
            }
        })
    }
</script>