<div class="account-login section">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 offset-lg-3 col-md-10 offset-md-1 col-12">

                <form class="card login-form" action="/mobile" method="post" enctype="application/x-www-form-urlencoded">
                    <div class="card-body">
                        <div class="title">
                            <h3>Login Now</h3>
                            {{#if message}}
                            <div class="alert alert-warning alert-dismissible">
                                <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                                <strong>{{message}}</strong>
                            </div>
                            {{/if}}
                        </div>


                        <div class="container-fluid mb-3 mt-3">
                            <form id="login"  onsubmit="process(event)">
                                <p><strong>Enter your phone number:</strong></p>
                                <input id="phone" type="tel" name="mobile" placeholder="Mobile number" class=" form-control mb-3 " />
                                <input type="submit" class="btn btn-success" value="Verify" />
                            </form>
                        </div>


                        <p class="outer-link">Don't have an account? <a href="/register">Register here </a>
                        </p>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>